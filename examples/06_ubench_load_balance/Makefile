BUILD_DIR=$(PWD)/build
APP_NAME?=$(notdir $(PWD))
SLEEP_TIME?=7812500

CFLAGS+=-I./
CFLAGS+=-DENABLE_SM
CFLAGS+=-DENABLE_VAM
# CFLAGS+=-DENABLE_MOZART
# CFLAGS+=-DNO_YIELD
CFLAGS+=-DDO_SCHED_RR
CFLAGS+=-DDO_PER_INVOKE
# CFLAGS+=-DDO_CPU_PIN
CFLAGS+=-DLITE_REPORT
# CFLAGS+=-DMED_REPORT
CFLAGS+=-DVAM_SLEEP_MIN=$(SLEEP_TIME)
APPSRCFILES+=$(PWD)/main.c

OPT_APP_OBJ=$(patsubst $(PWD)/%.c,$(BUILD_DIR)/%.app.opt.o,$(APPSRCFILES))
LOW_DBG_APP_OBJ=$(patsubst $(PWD)/%.c,$(BUILD_DIR)/%.app.low.o,$(APPSRCFILES))
HIGH_DBG_APP_OBJ=$(patsubst $(PWD)/%.c,$(BUILD_DIR)/%.app.high.o,$(APPSRCFILES))

include ../../Makefile
